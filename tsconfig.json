{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"lib": [ "es6", "es5", "esnext" ]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./src/**/*.spec.ts"
	],
	"compileOnSave": true
}
